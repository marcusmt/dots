set $mod Mod4
font pango: Hack Nerd Font 0
floating_modifier $mod
gaps inner 6
smart_gaps on
focus_wrapping workspace
default_border pixel 0
for_window [class=.*] border pixel 0
default_floating_border pixel 0

exec feh --bg-fill ~/.config/i3/wallpaper.jpg

exec --no-startup-id dunst
exec --no-startup-id picom
exec --no-startup-id dex -a -s /etc/xdg/autostart/:~/.config/autostart/
exec --no-startup-id /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1
exec --no-startup-id nm-applet
exec --no-startup-id blueman-applet

# Shortcuts
bindsym $mod+l                exec "sleep 0.1 && i3lock --blur 5"
bindsym $mod+z                exec dunstctl set-paused true
bindsym $mod+Shift+z          exec dunstctl set-paused false
bindsym $mod+Return           exec alacritty
bindsym Print                 exec "flameshot gui"
bindsym $mod+r                exec --no-startup-id dmenu_run
bindsym $mod+space            exec --no-startup-id i3-dmenu-desktop
bindsym $mod+Shift+e          exec i3-msg exit
bindsym $mod+h                move scratchpad
bindsym $mod+Shift+h          scratchpad show
bindsym $mod+Shift+q          kill
bindsym $mod+Shift+c          reload
bindsym $mod+Shift+r          restart

# Screen control
bindsym $mod+e                layout toggle splith tabbed
bindsym $mod+x                move workspace to output next

# Media control
bindsym XF86AudioRaiseVolume  exec --no-startup-id "wpctl set-volume @DEFAULT_SINK@ 0.05+ && $HOME/.config/i3/volume_notify.sh"
bindsym XF86AudioLowerVolume  exec --no-startup-id "wpctl set-volume @DEFAULT_SINK@ 0.05- && $HOME/.config/i3/volume_notify.sh"
bindsym XF86AudioMute         exec --no-startup-id "wpctl set-mute @DEFAULT_SINK@ toggle && $HOME/.config/i3/volume_notify.sh"
bindsym XF86AudioMicMute      exec --no-startup-id "wpctl set-mute @DEFAULT_SOURCE@ toggle && $HOME/.config/i3/mic_notify.sh"
bindsym XF86MonBrightnessUp   exec --no-startup-id $HOME/.config/i3/brightness_control.sh brightness_up
bindsym XF86MonBrightnessDown exec --no-startup-id $HOME/.config/i3/brightness_control.sh brightness_down

# Window movement control
bindsym $mod+f                fullscreen toggle
bindsym $mod+Shift+space      floating toggle
bindsym $mod+Left             focus left
bindsym $mod+Right            focus right
bindsym $mod+Shift+Left       move left
bindsym $mod+Shift+Right      move right

set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"

bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5

bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5

set $rosewater #f5e0dc
set $peach #fab387
set $lavender #b4befe
set $overlay0 #6c7086
set $base #1e1e2e

# target                 title     bg    text   indicator  border
client.focused           $lavender $base $text  $rosewater $lavender
client.focused_inactive  $overlay0 $base $text  $rosewater $overlay0
client.unfocused         $overlay0 $base $text  $rosewater $overlay0
client.urgent            $peach    $base $peach $overlay0  $peach
client.placeholder       $overlay0 $base $text  $overlay0  $overlay0
client.background        $base

bar {
    font pango:Hack Nerd Font 12
    i3bar_command i3bar --transparency
    status_command i3status --config ~/.config/i3/i3status.conf
    workspace_buttons no
    output primary
    position top
    colors {
        background #00000000
        statusline #FFFFFF
    }
}

